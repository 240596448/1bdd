{
  "cmd": "oscript",
  "name": "OneScript: Testing",
  "args": [ "-encoding=utf-8", "../oscript-library/tests/testrunner.os", "-runall", "{PROJECT_PATH}/tests"],
  "sh": false,
  "errorMatch": [
    "{Модуль (?<file>[^/]+) / Ошибка в строке: (?<line>[0-9]+) / (?<message>.*)"
  ],
  "targets": {
    "Exec main feature": {
      "cmd": "oscript",
      "args": [ "-encoding=utf-8", "{PROJECT_PATH}/src/bdd.os", "{PROJECT_PATH}/features/core/ВыполнениеФич.feature", "-verbose", "on", "-out", "{PROJECT_PATH}/exec.log"],
      "sh": false,
      "errorMatch": [
        "{Модуль (?<file>[^/]+) / Ошибка в строке: (?<line>[0-9]+) / (?<message>.*)"
      ]
    },
    "Exec feature": {
      "cmd": "oscript",
      "args": [ "-encoding=utf-8", "{PROJECT_PATH}/src/bdd.os", "{FILE_ACTIVE}", "-verbose", "on", "-out", "{PROJECT_PATH}/exec.log"],
      "sh": false,
      "errorMatch": [
        "{Модуль (?<file>[^/]+) / Ошибка в строке: (?<line>[0-9]+) / (?<message>.*)"
      ]
    },
    "Generate steps for feature file": {
      "cmd": "oscript",
      "args": [ "-encoding=utf-8", "{PROJECT_PATH}/src/bdd.os", "gen", "{FILE_ACTIVE}", "-verbose", "on", "-out", "{PROJECT_PATH}/gen.log"],
      "sh": false,
      "errorMatch": [
        "{Модуль (?<file>[^/]+) / Ошибка в строке: (?<line>[0-9]+) / (?<message>.*)"
      ]
    },
    "Test current test-file": {
      "cmd": "oscript",
      "args": [ "-encoding=utf-8", "tests/testrunner.os", "-run", "{FILE_ACTIVE}"],
      "sh": false,
      "errorMatch": [
        "{Модуль (?<file>[^/]+) / Ошибка в строке: (?<line>[0-9]+) / (?<message>.*)"
      ]
    },
    "Test select test-name": {
      "cmd": "oscript",
      "args": [ "-encoding=utf-8", "{PROJECT_PATH}/../oscript-library/tests/testrunner.os", "-run", "{FILE_ACTIVE}", "{SELECTION}"],
      "sh": false,
      "errorMatch": [
        "{Модуль (?<file>[^/]+) / Ошибка в строке: (?<line>[0-9]+) / (?<message>.*)"
      ]
    }
  }
}
